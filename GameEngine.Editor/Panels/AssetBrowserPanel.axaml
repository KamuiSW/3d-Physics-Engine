<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GameEngine.Editor.Panels.AssetBrowserPanel">
    <Grid RowDefinitions="Auto,*">
        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button Command="{Binding CreateFolderCommand}" ToolTip.Tip="Create Folder">
                <PathIcon Data="{StaticResource folder_add_regular}"/>
            </Button>
            <Button Command="{Binding ImportAssetsCommand}" 
                    Margin="5,0,0,0"
                    ToolTip.Tip="Import Assets">
                <PathIcon Data="{StaticResource import_regular}"/>
            </Button>
            <Button Command="{Binding RefreshCommand}" 
                    Margin="5,0,0,0"
                    ToolTip.Tip="Refresh">
                <PathIcon Data="{StaticResource arrow_sync_regular}"/>
            </Button>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnDefinitions="250,*">
            <!-- Folder Tree -->
            <TreeView Grid.Column="0"
                      Name="FolderTree"
                      Items="{Binding FolderStructure}"
                      SelectedItem="{Binding SelectedFolder}">
                <TreeView.ItemTemplate>
                    <TreeDataTemplate ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal">
                            <PathIcon Data="{StaticResource folder_regular}"/>
                            <TextBlock Text="{Binding Name}" Margin="5,0,0,0"/>
                        </StackPanel>
                    </TreeDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>

            <!-- Asset Grid -->
            <ListBox Grid.Column="1"
                     Name="AssetList"
                     Items="{Binding Assets}"
                     SelectedItem="{Binding SelectedAsset}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="100" Height="120" Margin="5">
                            <Image Source="{Binding Preview}"
                                   Width="64" Height="64"
                                   Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Name}"
                                     TextWrapping="Wrap"
                                     HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Type}"
                                     Opacity="0.7"
                                     FontSize="10"
                                     HorizontalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</UserControl> 